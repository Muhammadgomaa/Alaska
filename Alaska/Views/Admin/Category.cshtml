
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<Alaska.Models.Category> categories = ViewBag.Catg;
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"> Category /</span> Category Details</h4>
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <h5 class="card-header">Category Table</h5>
            @Html.ActionLink("Add New Category", "AddCategory", "Admin", new { @style = "color:#566A7F;width:200px;padding:20px" })
            <div class="table-responsive text-nowrap">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Category ID</th>
                            <th>Category Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @for(int i = 0; i < categories.Count; i++)
            {
                        <tr>
                            <td>@categories[i].Cat_ID</td>
                            <td><strong>@categories[i].Cat_Name</strong></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("UpdateCategory",new { id=categories[i].Cat_ID })"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="@Url.Action("DeleteCategory",new { id=categories[i].Cat_ID })"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
  </div>

